{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "STEMgraph-Challenge",
    "type": "object",
    "properties": {
        "challenge": {
            "type": "object",
            "properties": {
                "learning_objective": {
                    "type": "string",
                    "description": "The learning objective of the challenge"
                },
                "challenge_title": {
                    "type": "string",
                    "description": "The title of the challenge"
                },
                "challenge_description": {
                    "type": "string",
                    "description": "A description of the challenge"
                },
                "steps": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "A list of steps for completing the challenge"
                },
                "questions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "A list of questions related to the challenge"
                },
                "advice": {
                    "type": "string",
                    "description": "Advice given at the end of the challenge"
                }
            },
            "required": [
                "learning_objective",
                "challenge_title",
                "challenge_description",
                "steps"
            ]
        }
    },
    "required": ["challenge"]
}
